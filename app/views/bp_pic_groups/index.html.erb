<h1><%= getLongName('table_name','bp_pic_groups')%> 一覧</h1>

<%= paginate(@bp_pic_groups) %>

<table class="list_table">
  <tr>
    <th><%= getLongName('bp_pic_groups', 'bp_pic_group_name') %></th>
    <th><%= getLongName('bp_pic_groups', 'memo') %></th>
    <th>メール一覧</th>
    <th>メール作成</th>
  </tr>
<% @bp_pic_groups.select{|group| group.deleted == 0}.each do |bp_pic_group| %>
  <tr>
    <td><%= back_to_link bp_pic_group.counted_group_name, bp_pic_group %></td>
    <td><%= bp_pic_group.memo %></td>
    <td><%= back_to_link 'メール一覧', {:controller => :delivery_mails , :action => :index, :id => bp_pic_group.id }, :method => :get %></td>
    <td><%= back_to_link 'メール作成', {:controller => :delivery_mails , :action => :new, :id => bp_pic_group.id } %>
  </tr>
<% end %>
</table>

<br />

