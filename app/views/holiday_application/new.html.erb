<% if params[:working_type] %>
<h1><%=@holiday_application.working_type_name%>申請新規作成</h1>
<% else %>
<h1>休暇申請新規作成</h1>
<% end %>

<%= form_tag :action => 'create', :mode => params[:mode] do %>
  <%= render :partial => 'form' %>
  <%= submit_tag "登録", :onClick => "return validateDate($('#holiday_application_start_date').val()) && validateDate($('#holiday_application_end_date').val());" %>
<% end %>

<% unless params[:mode] == 'popup_new' %>
<%= link_to '戻る', :controller => :base_application, :action => :working_list, :mode => 'all_working' %>
<% end %>
