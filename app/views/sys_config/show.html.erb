<table class="show_table">
<%- for column in SysConfig.columns -%>
  <%- if system_column?(column.name) then next end -%>
<tr>
  <th><%= getLongName('sys_configs', column.name) %></th><td><%=simple_format h(@sys_config.send(column.name)) %></td>
</tr>
<% end %>
</table>
