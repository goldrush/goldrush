<%= error_messages_for 'biz_offer' %>


<h2>案件</h2>
<!--[form:business]-->
  <%= render :partial => 'business/form' %>
<!--[eoform:business]-->


<h2>照会</h2>
<!--[form:biz_offer]-->
  <%= hidden_field 'biz_offer', 'business_id', :value => @business.id %>
  
  <p>
    <label for="business_partner_name">上流取引先</label><br />
    <%= text_field_tag 'business_partner_name', @biz_offer.business_partner.blank? ? "" : @biz_offer.business_partner.business_partner_name, :readOnly => true, :style => "background-color: silver;", :size => 30 %>
    <input type=button value='...' onClick="disp_wide('<%=url_for :controller => 'business_partner', :action => 'list', :popup =>1, :flg => 'upper' %>');return false;" />
    <input type=button value='クリア' onClick="clearBp();return false;" />
  </p>
  <%= hidden_field 'biz_offer', 'business_partner_id' %>
  
  <p>
    <label for="bp_pic_name">上流取引先担当</label><br />
    <%= text_field_tag 'bp_pic_name', @biz_offer.bp_pic.blank? ? "" : @biz_offer.bp_pic.bp_pic_name, :readOnly => true, :style => "background-color: silver;", :size => 30 %>
    <input type=button value='...' onClick="openBpPicList();return false;" />
    <input type=button value='クリア' onClick="clearBpPic();return false;" />
  </p>
  <%= hidden_field 'biz_offer', 'bp_pic_id' %>

<p><label for="biz_offer_biz_offered_at"><%=getLongName('biz_offers','biz_offered_at')%></label><br />
<%= date_field 'biz_offer', 'biz_offered_at' %>
<%= select_tag 'biz_offered_at_hour', options_for_select((0..23).to_a.map{|x| sprintf("%0.2d", x)}, sprintf("%0.2d", @biz_offered_at_hour.to_i)) %> : 
<%= select_tag 'biz_offered_at_minute', options_for_select((0..5).to_a.map{|x| sprintf("%0.2d", x * 10)}, sprintf("%0.2d", @biz_offered_at_min.to_i)) %>
</p>

<p><label for="biz_offer_due_date"><%=getLongName('biz_offers','due_date')%></label><br /><%= date_field 'biz_offer', 'due_date'  %></p>

<p><label for="biz_offer_reprint_flg"><%=getLongName('biz_offers','reprint_flg')%></label><br /><%= check_box 'biz_offer', 'reprint_flg'  %></p>

<p><label for="biz_offer_winning_rate"><%=getLongName('biz_offers','winning_rate')%></label><br /><%= text_field 'biz_offer', 'winning_rate'  %></p>

<p><label for="biz_offer_sales_route"><%=getLongName('biz_offers','sales_route')%></label><br /><%= text_field 'biz_offer', 'sales_route'  %></p>

  <p>
    <label for="biz_offer_contact_pic_name">窓口担当</label><br />
    <%= text_field_tag 'contact_pic_name', @biz_offer.contact_pic.blank? ? "" : @biz_offer.contact_pic.employee.employee_name, :readOnly => true, :style => "background-color: silver;", :size => 30 %>
    <input type=button value='...' onClick="disp_wide('<%=url_for :controller => 'user', :action => 'list', :popup =>1, :mode => 'contact' %>');return false;" />
    <input type=button value='クリア' onClick="clearContactUser();return false;" />
  </p>
  <%= hidden_field 'biz_offer', 'contact_pic_id' %>
  
  <p>
    <label for="biz_offer_sales_pic_name">営業担当</label><br />
    <%= text_field_tag 'sales_pic_name', @biz_offer.sales_pic.blank? ? "" : @biz_offer.sales_pic.employee.employee_name, :readOnly => true, :style => "background-color: silver;", :size => 30 %>
    <input type=button value='...' onClick="disp_wide('<%=url_for :controller => 'user', :action => 'list', :popup =>1, :mode => 'sales' %>');return false;" />
    <input type=button value='クリア' onClick="clearSalesUser();return false;" />
  </p>
  <%= hidden_field 'biz_offer', 'sales_pic_id' %>
  
<p><label for="biz_offer_payment_text"><%=getLongName('biz_offers','payment_text')%></label><br /><%= resizable_area 'biz_offer', 'payment_text'  %></p>

<p><label for="biz_offer_payment_max"><%=getLongName('biz_offers','payment_max')%></label><br /><%= text_field 'biz_offer', 'payment_max_view', :size => 6 %>万円</p>

<p><label for="biz_offer_time_adjust_text"><%=getLongName('biz_offers','time_adjust_text')%></label><br /><%= text_field 'biz_offer', 'time_adjust_text'  %></p>

<p><label for="biz_offer_skill_consideration_flg"><%=getLongName('biz_offers','skill_consideration_flg')%></label><br /><%= check_box 'biz_offer', 'skill_consideration_flg'  %></p>

<p><label for="biz_offer_interview_times_memo"><%=getLongName('biz_offers','interview_times_memo')%></label><br /><%= resizable_area 'biz_offer', 'interview_times_memo'  %></p>

<p><label for="biz_offer_interview_times"><%=getLongName('biz_offers','interview_times')%></label><br /><%= text_field 'biz_offer', 'interview_times'  %></p>

<p><label for="biz_offer_sales_route_limit"><%=getLongName('biz_offers','sales_route_limit')%></label><br /><%= text_field 'biz_offer', 'sales_route_limit'  %></p>

<p><label for="biz_offer_application_format"><%=getLongName('biz_offers','application_format')%></label><br /><%= resizable_area 'biz_offer', 'application_format'  %></p>

<p><label for="biz_offer_memo"><%=getLongName('biz_offers','memo')%></label><br /><%= resizable_area 'biz_offer', 'memo'  %></p>

<!--[eoform:biz_offer]-->
<%= hidden_field 'biz_offer', 'lock_version' %>
<%= hidden_field 'biz_offer', 'import_mail_id' %>

<%= back_to_field_tag %>

