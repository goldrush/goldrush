<%= hidden_field 'contract', 'lock_version' %>
<!--[form:contract]-->
<table class="form_table">
<tr>
  <th><label for="contract_contract_status_type"><%=getLongName('contracts','contract_status_type')%></label></th>
  <td><%= select 'contract', 'contract_status_type', getTypes('contract_status_type') %></td>
</tr>
<tr>
  <th><label for="contract_upper_contract_status_type"><%=getLongName('contracts','upper_contract_status_type')%></label></th>
  <td><%= @contract.upper_contract_status_type_name  %></td>
</tr>
<tr>
  <th><label for="contract_down_contract_status_type"><%=getLongName('contracts','down_contract_status_type')%></label></th>
  <td><%= @contract.down_contract_status_type_name  %></td>
</tr>
<%if false%>
<tr>
  <th class="must"><label for="contract_closed_at"><%=getLongName('contracts','closed_at')%>(*)</label></th>
  <td>
    <%= date_field 'contract', 'closed_at_date' %>
    <%= select 'contract', 'closed_at_hour', (0..23).to_a.map{|x| sprintf("%0.2d", x)} %> : 
    <%= select 'contract', 'closed_at_minute', (0..5).to_a.map{|x| x.to_s + "0"} %>
  </td>
</tr>
<%end%>
<% unless @contract.new_record? %>
<tr>
  <th><label for="contract_contracted_at"><%=getLongName('contracts','contracted_at')%></label></th>
  <td>
    <%= date_field 'contract', 'contracted_at_date' %>
    <%= select 'contract', 'contracted_at_hour', [[]] + (0..23).to_a.map{|x| sprintf("%0.2d", x)} %> : 
    <%= select 'contract', 'contracted_at_minute', [[]] + (0..5).to_a.map{|x| x.to_s + "0"} %>
  </td>
</tr>
<% end %>
<tr>
  <th class="must"><label for="contract_contract_pic_name">契約担当(*)</label></th>
  <td>
    <%= select 'contract', 'contract_pic_id', User.pic_select_items(current_user.owner_id) %></td>
</tr>
<%if false %>
<tr>
  <th class="must"><label for="contract_start_date"><%=getLongName('contracts','start_date')%>(*)</label></th>
  <td><%= date_field 'contract', 'start_date' %></td>
</tr>
<tr>
  <th><label for="contract_end_date"><%=getLongName('contracts','end_date')%></label></th>
  <td><%= date_field 'contract', 'end_date' %></td>
</tr>
<%end%>
<tr>
  <th class="must"><label for="contract_contract_start_date"><%=getLongName('contracts','contract_start_date')%>(*)</label></th>
  <td><%= date_field 'contract', 'contract_start_date'  %></td>
</tr>
<tr>
  <th class="must"><label for="contract_contract_end_date"><%=getLongName('contracts','contract_end_date')%>(*)</label></th>
  <td><%= date_field 'contract', 'contract_end_date'  %></td>
</tr>
<tr>
  <th class="must"><label for="contract_contract_renewal_unit"><%=getLongName('contracts','contract_renewal_unit')%>(*)</label></th>
  <td><%= text_field 'contract', 'contract_renewal_unit'  %></td>
</tr>
<tr>
  <th class="must"><label for="contract_contract_renewal_terms"><%=getLongName('contracts','contract_renewal_terms')%>(*)</label></th>
  <td><%= text_field 'contract', 'contract_renewal_terms'  %></td>
</tr>
<tr>
  <th><label for="contract_memo"><%=getLongName('contracts','memo')%></label></th>
  <td><%= resizable_area 'contract', 'memo' %></td>
</tr>
</table>
<!--[eoform:contract]-->
