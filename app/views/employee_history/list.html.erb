<h1><%=getLongName('table_name','employee_histories')%>一覧</h1>
<p>社員名: <%=h @employee.employee_name %></p>
<%= paginate(@employee_histories) %>

<table class="list_table">
  <tr >
    <th>No</th>
    <th><%=getLongName('employee_histories','start_date')%></th> 
    <th><%=getLongName('employee_histories','end_date')%></th> 
    <th><%=getLongName('employee_histories','summary')%></th> 
    <th><%=getLongName('employee_histories','content')%></th> 
    <th><%=getLongName('employee_histories','position')%></th> 
    <th><%=getLongName('employee_histories','technique')%></th> 
    <th> </th>
  </tr>
  
<% @employee_histories.each_index do |idx| employee_history = @employee_histories[idx] %>
  <tr>
    <td align="center"><%=h (idx+1) %></td>
    <td align="center"><%=h employee_history.start_date.to_date if employee_history.start_date != nil %></td>
    <td align="center"><%=h employee_history.end_date.to_date if employee_history.end_date != nil %></td>
    <td ><%=h employee_history.summary %></td>
    <td ><%=h employee_history.content %></td>
    <td ><%=h employee_history.position %></td>
    <td ><%=h employee_history.technique %></td>
    <td>
      <%= link_to '表示', :action => 'show', :id => employee_history, :employee_id => @employee %>, 
      <%= link_to '変更', :action => 'edit', :id => employee_history, :employee_id => @employee %>, 
      <%= link_to '削除', { :action => 'destroy', :id => employee_history, :employee_id => @employee }, :confirm => 'この情報を削除します。よろしいですか?', :method => :post %>
    </td>
  </tr>
<% end %>
    
</table>

<br/>
<%= paginate(@employee_histories) %>

<br />

