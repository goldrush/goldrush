<div class="login_area">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "form"}) do |f| %>
  <div style="text-align:center">
    <p><%= image_tag 'logo.png' %></p>
    <p>&nbsp;</p>
  </div>
  <div class="login_left">ID </div>
  <div class="login_right"><%= f.email_field :email, :autofocus => true %></div>
  <div class="clearfix"></div>
  <div class="login_left">Password</div>
  <div class="login_right"><%= f.password_field :password %></div>
  <div class="clearfix"></div>
  <div class="login_left">ログインしたままにする</div>
  <div class="login_right"><%= f.check_box :remember_me %></div>
  <div class="clearfix"></div>
  <div style="text-align:center"><%= submit_tag "ログイン", :class => "btn btn-warning btn-large" %></div>
  <div class="enter_links">
    <p><%= link_to "ユーザー登録", new_registration_path(resource_name), :class => 'getting_started' %></p>
    <p><%= link_to "登録確認メールを再送する", new_confirmation_path(resource_name) %></p>
  </div>
  <% end %>
</div>
